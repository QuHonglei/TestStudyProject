<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDao" class="com.itheibai.dao.impl.UserDaoImpl">
        <!--注入普通数据类型-->
        <property name="name" value="普通"></property>
        <property name="age" value="18"></property>
        <!--注入list集合类型-->
        <property name="strList">
            <list>
                <value>aaa</value>
                <value>bbb</value>
                <value>ccc</value>
            </list>
        </property>
        <!--map集合类型注入-->
        <property name="userMap">
            <map>
                <entry key="u1" value-ref="user1"></entry>
                <entry key="u2" value-ref="user2"></entry>
            </map>
        </property>
        <!--properties集合类型注入-->
        <property name="properties">
            <props>
                <prop key="p1">ppp1</prop>
                <prop key="p2">ppp2</prop>
                <prop key="p3">ppp3</prop>
            </props>
        </property>
    </bean>
    <bean id="user1" class="com.itheibai.domain.User">
        <property name="name" value="张三"></property>
        <property name="age" value="19"></property>
    </bean>
    <bean id="user2" class="com.itheibai.domain.User">
        <property name="name" value="李四"></property>
        <property name="age" value="18"></property>
    </bean>

    <!--通过set方法注入，使用子标签-->
   <!-- <bean id="userService" class="com.itheibai.service.Impl.UserServiceImpl">
        <property name="userDao" ref="userDao"></property>
    </bean>-->

    <!--通过p标签进行注入,这里不需要子标签，直接关掉-->
    <!--<bean id="userService" class="com.itheibai.service.Impl.UserServiceImpl" p:userDao-ref="userDao"/>-->

    <!--通过有参构造方法注入-->
    <bean id="userService" class="com.itheibai.service.Impl.UserServiceImpl">
        <constructor-arg name="userDao" ref="userDao"></constructor-arg>
    </bean>

</beans>